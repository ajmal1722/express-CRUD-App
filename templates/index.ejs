<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
      body {
        background-color:  	#b51334;
      }
      thead,th,td,tr{
        padding: 10px; 
      }
      button{
        width: 100px;
      }
      td{
        padding-top: 15px;
        border-top: 2px solid rgba(16, 108, 89, 0.751);
      }
      .tableDiv,table{
        background-color: white;
        border-radius: 20px;
      }
    
    </style>
</head>
<body>
    <div class="container text-center my-5 p-3">
        <div class="text-center p-3">
            <h3 class="mb-4 text-white">
                User Details
            </h3>
            <div class="bg-light p-3 tableDiv">
              <table class="table text-center mb-3">
                  <thead style="background-color: rgba(128, 128, 128, 0.966);">
                    <tr>
                      <th class="py-4" scope="col">No</th>
                      <th class="py-4" scope="col">Name</th>
                      <th class="py-4" scope="col">Age</th>
                      <th class="py-4" scope="col">Phone</th>
                      <th class="py-4" scope="col">Email</th>
                      <th class="py-4" scope="col">Gender</th>
                      <th class="py-4" scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% userDatas.forEach(user => { %>
                      <tr>
                        <td style="padding-top: 35px;"><%= user.id %></td>
                        <td style="padding-top: 35px;"><%= user.name %></td>
                        <td style="padding-top: 35px;"><%= user.age %></td>
                        <td style="padding-top: 35px;"><%= user.phone %></td>
                        <td style="padding-top: 35px;"><%= user.email %></td>
                        <td style="padding-top: 35px;"><%= user.gender %></td>
                        <td>
                        <form action="/delete/<%= user.id %>" method="get">
                          <button type="submit" class="btn btn-danger mb-2">Delete</button>
                        </form>
                        <form action="/edit/<%= user.id %>" method="get">
                          <button type="submit" class="btn btn-success">Edit</button>
                        </form>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
        </div>
    </div>
    <div class="container">
      <div class="d-flex justify-content-end">
        <form action="/form">
          <input class="btn btn-primary" type="submit" value="Form">
        </form>
      </div>
    </div>
</body>
</html>
